  <div id="popupModal" class="fixed inset-0 z-50 hidden flex items-center justify-center p-4 mt-100">
    <div class="bg-white p-6 rounded-lg w-full max-w-5xl relative flex flex-col md:flex-row gap-6 shadow-xl">

      <button onclick="closeModal()"
        class="absolute top-2 right-2 text-gray-500 hover:text-red-500 text-2xl font-bold">&times;</button>
      <div class="md:w-1/2 w-full">
        <img id="modalImage" src="" alt="Popup Image" class="w-full h-64 md:h-full object-cover rounded-lg shadow-md" />
      </div>
      <div class="md:w-1/2 w-full text-left overflow-y-auto max-h-[90vh]">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Info</h2>
        <div id="modalText" class="text-gray-700 space-y-4 text-base leading-relaxed">
        </div>
      </div>
    </div>
  </div>
  <script>
    function openModal(imageSrc, paragraphText) {
      document.getElementById("modalImage").src = imageSrc;

      const modalText = document.getElementById("modalText");
      if (Array.isArray(paragraphText)) {
        modalText.innerHTML = paragraphText.map(p => `<p>${p}</p>`).join("");
      } else {
        modalText.innerHTML = `<p>${paragraphText}</p>`;
      }

      document.getElementById("popupModal").classList.remove("hidden");
    }

    function closeModal() {
      document.getElementById("popupModal").classList.add("hidden");
    }
  </script>
